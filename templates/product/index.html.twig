{% extends 'base.html.twig' %}

{% block title %}Admin - Produits{% endblock %}

{% block body %}
<div class="d-flex justify-content-between align-items-center mb-3">
    <h1 class="h3">Produits</h1>
    <a class="btn btn-primary" href="{{ path('app_product_new') }}">+ Nouveau produit</a>
</div>

<div class="card shadow-sm">
    <div class="table-responsive">
        <table class="table table-hover align-middle mb-0">
            <thead class="table-dark">
                <tr>
                    <th>#</th>
                    <th>Image</th>
                    <th>Nom</th>
                    <th>Catégorie</th>
                    <th>Prix</th>
                    <th>Créé le</th>
                    <th class="text-end">Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for product in products %}
                <tr>
                    <td>{{ product.id }}</td>
                    <td>
                        {% if product.image %}
                            <img src="{{ asset('uploads/products/' ~ product.image) }}" width="60" class="rounded border">
                        {% else %}
                            <span class="text-muted">—</span>
                        {% endif %}
                    </td>
                    <td class="fw-semibold">{{ product.name }}</td>
                    <td>{{ product.category.name ?? '-' }}</td>
                    <td>{{ product.price }}</td>
                    <td>{{ product.createdAt ? product.createdAt|date('Y-m-d') : '' }}</td>
                    <td class="text-end">
                        <a class="btn btn-sm btn-outline-secondary" href="{{ path('app_product_show', {'id': product.id}) }}">Voir</a>
                        <a class="btn btn-sm btn-outline-primary" href="{{ path('app_product_edit', {'id': product.id}) }}">Éditer</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="7" class="text-center text-muted py-4">Aucun produit</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
</div>
{% endblock %}
