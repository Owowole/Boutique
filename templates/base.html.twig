<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Boutique{% endblock %}</title>

    <meta name="viewport" content="width=device-width, initial-scale=1">

    {# Bootstrap CSS #}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    {{ encore_entry_link_tags('app') }}

</head>
<body class="bg-light">

<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container">

        <a class="navbar-brand fw-bold" href="{{ path('catalogue_index') }}">Boutique</a>

        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#nav">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="nav">
            <ul class="navbar-nav me-auto">
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('catalogue_index') }}">Catalogue</a>
                </li>

                {# Gestion Produits / Catégories pour ROLE_USER (et donc aussi ROLE_ADMIN) #}
                {% if is_granted('ROLE_USER') %}
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_product_index') }}">Admin Produits</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_category_index') }}">Admin Catégories</a>
                    </li>
                {% endif %}

                {# Gestion des utilisateurs réservée à ROLE_ADMIN #}
                {% if is_granted('ROLE_ADMIN') %}
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_user_index') }}">Admin Utilisateurs</a>
                    </li>
                {% endif %}
            </ul>

            <ul class="navbar-nav ms-auto">
                {% if app.user %}
                    <li class="nav-item d-flex align-items-center">
                        <span class="nav-link text-warning">
                            {{ app.user.userIdentifier }}
                        </span>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_logout') }}">Logout</a>
                    </li>
                {% else %}
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_login') }}">Login</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_register') }}">Register</a>
                    </li>
                {% endif %}
            </ul>
        </div>
    </div>
</nav>

{# SECTION UTILISATEUR : message pour ROLE_INTERMEDIAIRE #}
<div class="container mt-3">
    {% if app.user and 'ROLE_INTERMEDIAIRE' in app.user.roles and not is_granted('ROLE_USER') %}
        <div class="alert alert-success">
            Votre compte est en cours de vérification par un administrateur.
        </div>
    {% endif %}
</div>

<div class="container py-4">

    {# Flash messages #}
    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="alert alert-{{ label }} mb-3">{{ message }}</div>
        {% endfor %}
    {% endfor %}

    {% block body %}{% endblock %}
</div>

{# Bootstrap JS #}
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
{{ encore_entry_link_tags('app') }}
</body>
</html>
